<UserControl x:Class="XTMF.Gui.UserControls.DocumentationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:my="clr-namespace:XTMF.Gui.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">

    <StackPanel>
        <TextBlock Margin="5" HorizontalAlignment="Center" FontSize="24" Text="{Binding ModuleName, Mode=OneWay}" Foreground="{DynamicResource MaterialDesignBody}" Grid.RowSpan="2" />
        <TextBlock Margin="5" HorizontalAlignment="Center" FontSize="16" Text="{Binding ModuleNamespace, Mode=OneWay}" Foreground="{DynamicResource MaterialDesignBody}" />
        <TextBlock Margin="5" HorizontalAlignment="Center" FontSize="16" Text="{Binding ModuleDescription, Mode=OneWay}" Foreground="{DynamicResource MaterialDesignBody}" />
        <Grid Background="{DynamicResource MaterialDesignPaper}" Height="2" HorizontalAlignment="Stretch" Margin="5,6,5,5" />
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="AUTO" />
                <RowDefinition Height="AUTO" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="20" Text="SubModules" Foreground="{DynamicResource MaterialDesignBody}" />
            <ItemsControl Grid.Row="1" ItemsSource="{Binding ModuleSubmodules, Mode=OneWay}">
                <ItemsControl.ItemTemplate>
                    <ItemContainerTemplate DataType="{x:Type my:SubModule}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Foreground="{DynamicResource MaterialDesignBody}" Text="{Binding Name, Mode=OneWay}" />
                            <TextBlock Grid.Column="1" Foreground="{DynamicResource MaterialDesignBody}" Text="{Binding Type, Mode=OneWay}" />
                            <TextBlock Grid.Column="2" Foreground="{DynamicResource MaterialDesignBody}" Text="{Binding Description, Mode=OneWay}" TextWrapping="Wrap"/>
                        </Grid>
                    </ItemContainerTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="AUTO" />
                <RowDefinition Height="AUTO" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="20" Text="Parameters" Foreground="{DynamicResource MaterialDesignBody}" />
            <ItemsControl Grid.Row="1" ItemsSource="{Binding ModuleParameters, Mode=OneWay}">
                <ItemsControl.ItemTemplate>
                    <ItemContainerTemplate DataType="{x:Type my:Parameter}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Foreground="{DynamicResource MaterialDesignBody}" Text="{Binding Name, Mode=OneWay}" />
                            <TextBlock Grid.Column="1" Foreground="{DynamicResource MaterialDesignBody}" Text="{Binding Type, Mode=OneWay}" />
                            <TextBlock Grid.Column="2" Foreground="{DynamicResource MaterialDesignBody}" Text="{Binding Description, Mode=OneWay}" TextWrapping="Wrap" />
                        </Grid>
                    </ItemContainerTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </StackPanel>
</UserControl>
